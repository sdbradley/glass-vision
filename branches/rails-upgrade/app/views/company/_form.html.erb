<%= error_messages_for 'company' %>

<div style="float:right; height:370px !important; width:350px; display:block">
  <%= image_tag @company.logo.url(:original) if @company.logo.url %>
  <br />
  <%= f.label trn_geth('LABEL_PHOTO') %>: <%= f.file_field :logo %>
  <br />
  <span style="font-size:smaller"><%= display_minimum_dimensions(200) %></span>
</div>

<table>
  <tr valign="top">
    <td align="right"><%= trn_geth('LABEL_NAME') %><%= trn_geth('LABEL_SEMICOLON') %></td>
    <td><%= f.text_field :name, :size => 50, :class => "fullwidth"%></td>
  </tr>
  <tr valign="top">
    <td align="right"><%= trn_geth('LABEL_ADDRESS') %><%= trn_geth('LABEL_SEMICOLON') %></td>
    <td><%= f.text_area :address, :cols => '39', :rows => '10', :class => "fullwidth" %></td>
  </tr>
  <tr valign="top">
    <td align="right"><%= trn_geth('LABEL_PHONE') %><%= trn_geth('LABEL_SEMICOLON') %></td>
    <td><%= f.text_field :phone, :size => 50 , :class => "fullwidth"%></td>
  </tr>
  <tr valign="top">
    <td align="right"><%= trn_geth('LABEL_FAX') %><%= trn_geth('LABEL_SEMICOLON') %></td>
    <td><%= f.text_field :fax, :size => 50, :class => "fullwidth" %></td>
  </tr>
  <tr valign="top">
    <td align="right"><%= trn_geth('LABEL_GST') %><%= trn_geth('LABEL_SEMICOLON') %></td>
    <td><%= f.text_field :gst_number, :size => 50, :class => "fullwidth" %></td>
  </tr>
  <tr valign="top">
    <td align="right"><%= trn_geth('LABEL_PST') %><%= trn_geth('LABEL_SEMICOLON') %></td>
    <td><%= f.text_field :pst_number, :size => 50, :class => "fullwidth" %></td>
  </tr>
</table>
