<%= error_messages_for 'role' %>
<li>
  <%= role.rolename %>
    <% if @user.has_role?(role.rolename) %>
      <%= button_to trn_get('REMOVE_ROLE_LABEL'), user_role_url(:id => role.id, :user_id => @user.id), method: :delete %>
    <% else %>
      <%= button_to trn_get('ASSIGN_ROLE_LABEL'), user_role_url(:id => role.id, :user_id => @user.id), :method => :put %>
    <% end %>
</li>


