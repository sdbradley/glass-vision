<% if logged_in? %>
    <h2><%= trn_geth('USER_LABEL') %>: <%= @user.login %></h2>
    <%= trn_geth('EMAIL_LABEL') %>: <%= @user.email %><br />
    <% if @current_user.has_role?('administrator') %>
        <p><%= trn_geth('LABEL_DISCOUNT') %>: <%= @user.discount %> </p>
    <% end %>

    <%= trn_geth('LABEL_COMPANY') +":" unless @user.companies.empty? %>
    <% @user.companies.each do |company| %>
        <%= company.name %> <br/>
    <% end %>

    <p><%= trn_geth('JOINED_ON_LABEL') %>: <%= @user.created_at.to_s(:long) %></p>
<% end %>
<%= link_to trn_geth('BUTTON_BACK_TO_LIST'), :action => 'index' %>
