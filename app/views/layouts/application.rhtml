<html>
  <head>
    <title><%= trn_get('SITE_TITLE') %></title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="Shortcut Icon" href="/images/favicon.ico"/>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
    <div id="header">
      <%= image_tag 'haut_glassvision.gif', :size => "646x53"%>
    </div>
    <div id="nav">
    <ul>
      <li><%= link_to image_tag("fr.png", :border => 0, :class => "flag"), :controller => 'home', :action => 'set_lang', :lang => "fr" %></li>
      <li><%= link_to image_tag("us.png", :border => 0, :class => "flag"), :controller => 'home', :action => 'set_lang', :lang => "en" %></li>
      <li><%= link_to image_tag("es.png", :border => 0, :class => "flag"), :controller => 'home', :action => 'set_lang', :lang => "es" %></li>
      <li><%= link_to trn_get('MENU_HOME'), :controller => 'home' %></li>
      <% if logged_in? %>
<!--        <li>Hi, <%= link_to h(current_user.login.capitalize), user_path(current_user) %></li> -->
<!--        <li><%= link_to 'Profile', edit_user_path(current_user) %></li> -->
<!--          <li><%= link_to 'Change Password', change_password_path %></li> -->
        <% if current_user.has_role?('administrator') %>
            <li><%= link_to trn_geth('MENU_ADMIN_USERS_LABEL'), users_path %></li>
        <% end %>
      <% end %>     
    </ul>
    <% if logged_in? %>
      <div  id='greeting'>
        <ul>
        <li><%= trn_geth('MENU_GREETING_LABEL')%>,<%= link_to h(current_user.login), edit_user_path(current_user) %>.</li>
        <li><%= link_to trn_geth('MENU_LOGOUT_LABEL'), logout_path %></li>
        </ul>
      </div>
    <% end %>     
  </div> <!-- nav -->

  <div id="leftnav">
    <!-- this is the left nav menu -->
    <ul>
      <li><%= link_to trn_get('MENU_HOME'), :controller => 'home' %></li>
      <% if current_user.has_role?('administrator') %>
      <li><%= link_to trn_geth('TITLE_SERIE_LIST'), :controller => 'serie', :action => 'list' %></li>
      <li><%= link_to trn_geth('TITLE_SHAPE_LIST'), :controller => 'shape', :action => 'list' %></li>
      <li><%= link_to trn_geth('TITLE_OPENING_LIST'), :controller => 'opening', :action => 'list' %></li>
      <li><%= link_to trn_geth('TITLE_OPTION_LIST'), :controller => 'option', :action => 'list' %></li>
      <li><%= link_to trn_geth('TITLE_TRANSLATION_LIST'), :controller => 'translation', :action => 'list' %></li>
      <li><%= link_to trn_geth('TITLE_DBTF_LIST'), :controller => 'database_translation_field', :action => 'list' %></li>
      <li><%= link_to trn_geth('TITLE_DBT_LIST'), :controller => 'database_translation', :action => 'list' %></li>
      <li><%= link_to trn_geth('TITLE_COMPANY_LIST'), :controller => 'company', :action => 'list' %></li>
      <% end %>
      <li><%= link_to trn_geth('TITLE_QUOTATION_LIST'), :controller => 'quotation', :action => 'list' %></li>
      <li><%= link_to trn_geth('MENU_ADMIN_USERS_LABEL'), users_path %></li>
    </ul>
  </div>
  <div id='content'>
    <h1 id="site_title"><%= trn_get('SITE_TITLE') %></h1>
  
      <% if flash[:error] %>
      <div class="error">
        <table>
          <tr>
            <td>
              <%= flash[:error] %>
            </td>
          </tr>
        </table>
      </div>
      <% end %>
      <% if flash[:notice] %>
      <div class="notice">
        <table>
          <tr>
            <td>
              <%= flash[:notice] %>
            </td>
          </tr>
        </table>
      </div>
      <% end %>
      
      <%= @content_for_layout %>
    </div>
  </body>
</html>
