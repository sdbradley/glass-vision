<h2><%= trn_geth('HEADER_OPTIONS_FOR_SERIE') %> <%= @serie.tr_name %></h2>

<% form_tag :action => 'update_options', :id => @serie do %>
  <% for option in @options %>
    <%= check_box_tag 'options[]', option.id, @serie.options.include?(option) ? true : false %><%= option.tr_description %><br/>
  <% end %>
  <%= submit_tag trn_geth('BUTTON_SAVE') %>
<% end %>
