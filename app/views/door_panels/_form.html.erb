<%= error_messages_for 'door_panel' %>

<table>
  <%= gv_fields_for(f, :name, 'LABEL_NAME', :size => 30) %>
  <tr valign="top">
    <td align="right"><%= trn_geth('LABEL_PREVIEW_IMAGE_NAME') %><%= trn_geth('LABEL_SEMICOLON') %></td>
    <td><%= f.text_field 'preview_image_name', :size => 20 %></td>
  </tr>
  <tr valign="top">
    <td align="right"><%= trn_geth('LABEL_SELECT_DOOR_SECTIONS') %><%= trn_geth('LABEL_SEMICOLON') %></td>
    <td>
      <% @door_sections.each do |door_section| %>
        <%= check_box_tag 'door_panel[door_section_ids][]', door_section.id, @door_panel.door_sections.exists?(:id => door_section.id) %> <%= door_section.name %><br/>
      <% end %>
    </td>
  </tr>
  <tr valign="top">
    <td align="right"><%= trn_geth('LABEL_GAP') %><%= trn_geth('LABEL_SEMICOLON') %></td>
    <td><%= f.select 'gap', %w{slab l lp slf}.collect { |g| [g.upcase, g] } %></td>
  </tr>
  <tr valign="top">
    <td align="right"><%= trn_geth('LABEL_PRICE') %><%= trn_geth('LABEL_SEMICOLON') %></td>
    <td><%= f.text_field 'price', :size => 20 %></td>
  </tr>
</table>
