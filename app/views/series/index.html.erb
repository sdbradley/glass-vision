<h2><%= trn_geth('TITLE_SERIE_LIST') %></h2>

<%= link_to trn_geth('BUTTON_ADD'), new_series_path %>
<table cellspacing="0">
  <tr class="header">
    <th><%= trn_geth('HEADER_NAME') %></th>
    <th><%= trn_geth('HEADER_DESCRIPTION') %></th>
    <th><%= trn_geth('SERIES_TYPE_LABEL') %></th>
    <th></th>
  </tr>
<% for series in @series %>
  <tr class="<%= cycle('odd', 'even') %>">
    <td><%= series.name %></td>
    <td><%= series.description %></td>
    <td><%= humanize_series_type series.series_type %></td>
    <td>
      <%= link_to trn_geth('BUTTON_SHOW'), series_path(series) %> |
      <%= link_to trn_geth('BUTTON_EDIT'), edit_series_path(series) %> |
      <%= link_to trn_geth('BUTTON_DELETE'), series_path(series), :confirm => trn_geth('LABEL_DELETE_QUESTION'), :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
